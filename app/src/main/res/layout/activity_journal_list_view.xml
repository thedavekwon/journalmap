<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/activity_journal_list_view_image"
        android:layout_width="90dp"
        android:layout_height="90dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_journal_list_view_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/activity_journal_list_view_Context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/activity_journal_list_view_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/activity_journal_list_view_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:text="sample_name"
        android:textSize="20sp" />

</LinearLayout>
